<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_marginRight="0.0dp"
        android:layout_marginBottom="0.0dp">
        <ImageButton
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:id="@+id/addGuiso"
            android:minHeight="128dp"
            android:minWidth="128dp"
            android:padding="10dp"
            android:src="@drawable/guisos1"
            android:maxHeight="70dp"
            android:maxWidth="25dp"
            android:scaleType="fitXY"
            android:onClick="ShowAddDialog()" />
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout1"
            android:paddingBottom="5dp"
            android:paddingRight="0dp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp">
            <TextView
                android:text="@string/AgregarGuiso"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView1" />
            <TextView
                android:text="@string/AgregarGuisoDesc"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px">
        <ImageButton
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:id="@+id/comanda"
            android:minHeight="128dp"
            android:minWidth="128dp"
            android:padding="10dp"
            android:src="@drawable/comanda"
            android:maxHeight="70dp"
            android:maxWidth="25dp"
            android:scaleType="fitXY"
            android:onClick=""/>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2"
            android:paddingBottom="5dp"
            android:paddingRight="0dp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp">
            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewComanda"
                android:text="@string/AgregarComanda" />
            <TextView
                android:text="@string/AgregarComandaDesc"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewComandaDesc" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
